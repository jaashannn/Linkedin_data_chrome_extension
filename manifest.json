{
    "manifest_version": 3,
    "name": "LinkedIn Data Extractor",
    "version": "1.0",
    "description": "Extracts company name, first name, and last name from LinkedIn profiles.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}